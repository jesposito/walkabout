    </Changes>
    <!-- ==================== ALWAYS VISIBLE ==================== -->
    <Config Name="Web UI Port" Target="8000" Default="8000" Mode="tcp" Description="Container Port: 8000" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
    <Config Name="App Data" Target="/app/data" Default="/mnt/user/appdata/walkabout/data" Description="Path to app data (database, screenshots). Include this in backups." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/walkabout/data</Config>
    <Config Name="Public URL" Target="BASE_URL" Default="http://IP_ADDRESS:8000" Description="Your Unraid IP and port (e.g. http://192.168.1.100:8000). Used for notification links." Type="Variable" Display="always" Required="true" Mask="false">http://IP_ADDRESS:8000</Config>
    <Config Name="Timezone" Target="TZ" Default="America/New_York" Description="Timezone for scheduling and display." Type="Variable" Display="always" Required="true" Mask="false">America/New_York</Config>
    <!-- ==================== ADVANCED (Show more settings) ==================== -->
    <Config Name="PUID" Target="PUID" Default="99" Description="User ID for file permissions." Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
    <Config Name="PGID" Target="PGID" Default="100" Description="Group ID for file permissions." Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
    <!-- ==================== ADVANCED-HIDE (Internal settings) ==================== -->
    <Config Name="Database URL" Target="DATABASE_URL" Default="sqlite:///./data/walkabout.db" Description="Internal database. Do not change." Type="Variable" Display="advanced-hide" Required="true" Mask="false">sqlite:///./data/walkabout.db</Config>
    <Config Name="Environment" Target="ENV" Default="dev" Description="Environment mode. Do not change." Type="Variable" Display="advanced-hide" Required="true" Mask="false">dev</Config>
    <Config Name="Scheduler Enabled" Target="SCHEDULER_ENABLED" Default="true" Description="Enable background scheduler. Do not change." Type="Variable" Display="advanced-hide" Required="true" Mask="false">true</Config>
</Container>
